<div class="row">
  <% game.boards.each do |board| %>
    <div class="span5">
      <h2><%= board.type_of.capitalize %> Board</h2>
      <table class="table table-bordered <%= board.type_of %>">
        <tbody>
        <% board.size.times do |y_count| %>
          <tr>
            <% board.size.times do |x_count| %>
              <td align="center" valign="center" onclick="<%= table_cell_click(game, board, x_count, y_count) %>"><%= ship_or_shot_prefix(board, x_count, y_count) %></td>
            <% end %>
          </tr>
        <% end %>
        </tbody>

      </table>
    </div>
    <div class="span1">&nbsp;</div>
  <% end %>
</div>

<% if game.status.present? %>
  <div class="row">
    <div class="span12">
      <h2><%= game.status %></h2>
    </div>
  </div>
<% end %>